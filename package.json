{
  "name": "hwbot",
  "version": "1.0.0",
  "description": "Homework Bot Backend.",
  "private": true,
  "engines": {
    "node": "^12.0.0"
  },
  "scripts": {
    "start": "npm run serve",
    "_build": "npm run build-sass && npm run build-ts && npm run lint && npm run copy-static-assets",
    "build": "npm run build-ts && npm run copy-static-assets",
    "serve": "node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "build-sass": "node-sass src/public/css/main.scss dist/public/css/main.css",
    "watch-sass": "node-sass -w src/public/css/main.scss dist/public/css/main.css",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\"",
    "fix": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "_dev": "nodemon server/server.js",
    "_start": "node server/server.js",
    "_check-coverage": "nyc report --check-coverage --lines 100",
    "_lint": "eslint --ignore-path .gitignore .",
    "_fix": "eslint --ignore-path .gitignore . --fix",
    "_test": "nyc mocha test --recursive --exit"
  },
  "husky": {
    "hooks": {
      "_pre-commit": "npm run lint"
    }
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "exclude": [
      "test"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ]
  },
  "dependencies": {
    "axios": "^0.19.2",
    "body-parser": "^1.18.3",
    "cheerio": "^1.0.0-rc.3",
    "chrono-node": "^1.4.6",
    "dotenv": "^8.2.0",
    "errorhandler": "^1.5.1",
    "express": "^4.16.4",
    "express-flash": "0.0.2",
    "express-session": "^1.17.1",
    "express-validator": "^6.4.1",
    "google-search-results-nodejs": "^1.3.0",
    "ibm-cloud-env": "^0.2.6",
    "ibm-watson": "^5.5.0",
    "log4js": "^6.4.0",
    "module-alias": "^2.2.2",
    "mongoose": "^5.9.13",
    "needle": "^2.4.1",
    "node-cache": "^5.1.0",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "pug": "^2.0.4",
    "qs": "^6.9.4",
    "swagger-ui-express": "^4.1.4",
    "tress": "^1.1.4",
    "twilio": "^3.43.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.1",
    "@types/chai": "^4.2.3",
    "@types/cheerio": "^0.22.18",
    "@types/concurrently": "^4.1.0",
    "@types/errorhandler": "^0.0.32",
    "@types/eslint": "^6.1.1",
    "@types/express": "^4.17.1",
    "@types/express-flash": "0.0.1",
    "@types/express-session": "^1.15.14",
    "@types/jest": "^24.0.23",
    "@types/jquery": "^3.3.36",
    "@types/lodash": "^4.14.150",
    "@types/mongoose": "^5.7.18",
    "@types/needle": "^2.0.4",
    "@types/node": "^12.12.37",
    "@types/node-sass": "^4.11.0",
    "@types/passport": "^1.0.1",
    "@types/passport-local": "^1.0.33",
    "@types/pug": "^2.0.4",
    "@types/request": "^2.48.3",
    "@types/request-promise": "^4.1.44",
    "@types/shelljs": "^0.8.7",
    "@types/swagger-ui-express": "^4.1.2",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "chai": "^4.2.0",
    "concurrently": "^5.2.0",
    "eslint": "^6.4.0",
    "eslint-config-strongloop": "^2.1.0",
    "husky": "^4.2.5",
    "jest": "^24.9.0",
    "mocha": "^7.1.2",
    "node-sass": "^4.14.0",
    "nodemon": "^1.19.2",
    "nyc": "^15.0.1",
    "shelljs": "^0.8.4",
    "sinon": "^9.0.2",
    "sinon-chai": "^3.5.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.10.1",
    "typescript": "^3.6.3"
  }
}
